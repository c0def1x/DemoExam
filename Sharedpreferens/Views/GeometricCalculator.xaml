<Window x:Class="SharedPreferens.Views.GeometricCalculator"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharedPreferens.Views"
        mc:Ignorable="d"
        Title="GeometricCalculator" 
        Height="640" 
        Width="360" 
        Background="#619BDE">
    <StackPanel>
        <Label Content="Геометрический калькулятор" HorizontalAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0 22 0 20"/>
        <Image Source="../Images/logo.png" Height="150" Width="133" Margin="0 0 0 80"/>
        <Label Margin="30 0 0 31" Content="Результат вычисления" Foreground="White" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="shapeTitle" Style="{DynamicResource RoundTextBox}" Margin="0 0 0 35"/>
        <TextBox x:Name="resultTextBox" Style="{DynamicResource RoundTextBox}" Margin="0 0 0 50"/>
        <Button Style="{DynamicResource RoundButton}" Content="Регистрация" Foreground="White" Background="#54E18D" FontSize="24" FontWeight="Bold"/>
    </StackPanel>
</Window>
