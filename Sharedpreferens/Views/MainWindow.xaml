<Window x:Class="SharedPreferens.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharedPreferens"
        xmlns:design="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="640" 
        Width="360"
        Background="#619BDE" 
        Icon="../Images/logo.png">
    <StackPanel>
        <Label Content="Геометрический калькулятор" HorizontalAlignment="Center" Foreground="White" FontSize="24" FontWeight="Bold" Margin="0 70 0 42"/>
        <Image Source="../Images/logo.png" Height="150" Width="133" Margin="0 0 0 62"/>
        <TextBox x:Name="loginTB"  Style="{DynamicResource RoundTextBox}" design:HintAssist.Hint="Введите логин" design:HintAssist.Background="#979797" Margin="0 0 0 35"/>
        <TextBox x:Name="passwordTB" Style="{DynamicResource RoundTextBox}" design:HintAssist.Hint="Введите пароль" Margin="0 0 0 50"/>
        <Button Style="{DynamicResource RoundButton}" Click="NavigateToGeometricShapesWindow" Content="Регистрация" Foreground="White" Background="#54E18D" FontSize="24" FontWeight="Bold"/>
    </StackPanel>
</Window>
